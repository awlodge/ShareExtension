{
  "manifest_version": 2,

  "name": "Share",
  "description": "Extension allowing simple extensible one-click sharing of a page from the browser.",
  "version": "0.0",

  "icons": {
    "48": "icons/icon.png"
  },

  "background": {
    "scripts": [
      "lib/background.js",
      "lib/constants.js",
      "lib/shareservice.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon.png"
  },

  "permissions": [
    "activeTab",
    "alarms",
    "storage"
  ]
}
